// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id
  gitHubId  Int        @unique
  username  String     @unique
  avatarUrl String
  createdAt Int
  userToken UserToken?

  @@map("users")
}

model UserToken {
  id           String @id
  userId       String @unique
  accessToken  String
  refreshToken String
  createdAt    Int
  expiresIn    Int

  user User @relation(fields: [userId], references: [id])

  @@map("usersToken")
}
